{$R *.dfm}

procedure TFrmLogin.SpeedButton2Click(Sender: TObject);
var
  frm: TForm1;
begin
  frm := TForm1.Create(nil);
  try
    frm.ShowModal;
  finally
    frm.Free;  // libera a memória assim que fechar
  end;
end;

end.
