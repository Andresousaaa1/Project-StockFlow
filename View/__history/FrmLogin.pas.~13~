  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.ComCtrls, Vcl.StdCtrls,
  Vcl.Buttons, Vcl.Imaging.pngimage, Vcl.Skia, FrmProdutos;

type
  TFrmLogin = class(TForm)
    pnlPrincipal: TPanel;
    pnlLogin: TPanel;
