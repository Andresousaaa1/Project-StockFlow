{$R *.dfm}



procedure TFormProdutos.FormShow(Sender: TObject);
begin
  if UsuarioLogado.NivelAcesso <> 'gerente' then
  begin
    SpeedButtonExcluir.Enabled := False;
    SpeedButtonNovo.Enabled := False;
  end;
end;

